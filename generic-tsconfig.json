{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node16",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "dist",
        "strict": true,
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "composite": true
    },
    "compileOnSave": true
}